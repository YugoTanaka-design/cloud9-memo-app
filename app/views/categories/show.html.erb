<h3><%=@category.name%>'s memo</h3>

<div class="row">
    <% @memos.each do |memo| %>
        <div class="col-sm-6 col-md-4 card-flame">
            <div class="card">
                <div class="card-header text-light memo-header"><h4><%=memo.title%></h4>
                <p><%=memo.category.name%></p>
                <div class="btns">
                    <a href="/memos/<%=memo.id%>" data-method="delete"><i class="fas fa-trash-alt trash-btn"></i></a> 
                    <a href="/memos/<%=memo.id%>/edit"><i class="fas fa-edit edit-btn"></i></a> </div>
                </div>
                <div class="card-body"><%=memo.body%></div>
            </div>
        </div>
    <% end %>
</div>